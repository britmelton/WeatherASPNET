@{
    ViewData["Title"] = "Home Page";
}

@model Weather

<div class="text-center">
    <h1 class="display-4">Get Current Weather</h1>
    <p>Enter your Zip Code below to get the current weather.</p>
    <p>(this is Index.cshtml)</p>
</div>

<div>
    @using (Html.BeginForm("Index", "Weather", FormMethod.Get))
    {
        <label asp-for="ZipCode" class="control-label">Zip Code</label>

        <input type="text" name="ZipCode" class="form-control" value="@Model.ZipCode" />
        <br />

        <input type="submit" value="Enter" class="btn btn-primary" />
    }
</div>
<br />
<div class="text-center">
    <h2>Weather Forecast</h2>
    <table class="table table-bordered">
        <tr>
            <td>
                <strong>City:</strong> @Model.City, @Model.Country
            </td>
        </tr>
        <tr>
            <td>
                <strong>Temperature:</strong> @Model.Temp ºF<br />
                <strong>Feels Like:</strong> @Model.FeelsLike ºF<br />
                <strong>Temp (Min):</strong> @Model.TempMin ºF<br />
                <strong>Temp (Max):</strong> @Model.TempMax ºF<br />
            </td>
        </tr>
        <tr>
            <td>
                <strong>Humidity:</strong> @Model.Humidity %
            </td>
        </tr>
        <tr>
            <td>
                <strong>Latitude:</strong> @Model.Coordinate.Latitude<br />
                <strong>Longitude:</strong> @Model.Coordinate.Longitude
            </td>
        </tr>
    </table>
</div>